<h1>Listing resources</h1>

<table>
  <tr>
    <th>Question</th>
    <th>Url</th>
    <th>Contains answer</th>
    <th>Type</th>
    <th>Begin</th>
    <th>End</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @resources.each do |resource| %>
  <tr>
    <td><%= resource.question_id %></td>
    <td><%= resource.url %></td>
    <td><%= resource.contains_answer %></td>
    <td><%= resource.type %></td>
    <td><%= resource.begin %></td>
    <td><%= resource.end %></td>
    <td><%= link_to 'Show', resource %></td>
    <td><%= link_to 'Edit', edit_resource_path(resource) %></td>
    <td><%= link_to 'Destroy', resource, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

