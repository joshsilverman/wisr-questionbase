%div{:id => "templates"}
     %div{:id => "activity_group"}
          .header
               .header_text_container
                    = label nil, nil, :class => "header_text"
               .delete_question_container
                    .delete_question
                         = image_tag "close.gif"                        
          %br  
          .activity_content   
               .activity_left_column
                    .question_group
                         = text_area nil, nil, :placeholder => "Question", :class => "question_area"
                    .answer_group
                         .add_answer Add Answer  
               .activity_right_column  
                    .question_media_box
                         = image_tag "http://www.mediatehawaii.org/wp-content/uploads/placeholder.jpg", :class => "media_preview"
                    .answer_media_box             
                         = image_tag "http://www.mediatehawaii.org/wp-content/uploads/placeholder.jpg", :class => "media_preview"                       
                         %br
     %div{:id => "answer"}
          .indicator
               = label(nil, "X", :class => "indicator_mark")
          .answer_space
               = text_field nil, nil, :id => "answer_field", :placeholder => "Answer", :class => "answer_field"    
     = text_field nil, nil, :placeholder => "URL", :class => "resource_field", :id => "resource"         
     %div{:id => "header"}
          = label nil, "", :class => "header_text"  
     #image_container_template
          = image_tag nil, :id => "image_preview"   
#media-dialog{:class => "ui-widget ui-helper-hidden"}
     #tabs
          %ul
               %li
                    %a{:href => "#tabs-1"} Image
               %li
                    %a{:href => "#tabs-2"} Text
               %li
                    %a{:href => "#tabs-3"} Video                    
          #tabs-1
               %form
                    %fieldset
                         #image_search_controls
                              %input{:id => "image_link_input", :name => "name", :type => "text", :placeholder => "Type to search or paste image URL", :class => "media_input"}
                              %button{:id => "image_search_button"}= "Search"
                              #search_preview
                              #previous_page <<
                              #next_page >>
                         #image_preview_container
                              = image_tag "http://www.mediatehawaii.org/wp-content/uploads/placeholder.jpg", :id => "image_search_preview"
          #tabs-2
               %form
                    %fieldset
                         %input{:id => "article_link_input", :name => "name", :type => "text", :placeholder => "Search wikipedia", :class => "media_input"}
                         %button{:id => "article_preview_button"}= "Search"
                         %br
                         #article_preview_field
          #tabs-3
               %form
                    %fieldset
                         #video_data
                              %input{:id => "video_link_input", :name => "name", :type => "text", :placeholder => "Link to YOUTUBE video", :class => "media_input"}
                              %br
                              Start time
                              %input{:id => "video_start_input_minute", :name => "name", :type => "text", :placeholder => "min", :class => "time_input"}
                              \:
                              %input{:id => "video_start_input_second", :name => "name", :type => "text", :placeholder => "sec", :class => "time_input"}
                              %br
                              End time
                              %input{:id => "video_end_input_minute", :name => "name", :type => "text", :placeholder => "min", :class => "time_input"}
                              \:
                              %input{:id => "video_end_input_second", :name => "name", :type => "text", :placeholder => "sec", :class => "time_input"}
                         #video_preview
                              %iframe{:id => "video_preview_frame", :width => 400, :height => 350}
                                
