          - elsif answer_resource.media_type == "video" then url = "http://cache.gizmodo.com/assets/images/4/2010/09/youtube-video-player-loading.png"
          = image_tag url, :id => "media_preview_#{answer_resource.id}", :class => "media_preview", :resource_id => answer_resource.id, :resource_url => answer_resource.url, :resource_type => answer_resource.media_type
          = link_to "Show", url, :target => "blank"
          = link_to_function "Delete", "window.media.removeResource(#{answer_resource.id})"
     - else 
          = image_tag "http://www.mediatehawaii.org/wp-content/uploads/placeholder.jpg", :class => "media_preview"                          
