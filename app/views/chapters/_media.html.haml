.question_media_box
     - question_resource = question.resources.all(:conditions => {:contains_answer => false}).first
     - if question_resource
          - if question_resource.media_type == "image"
               = image_tag question_resource.url, :id => "media_preview_#{question_resource.id}", :class => "media_preview", :resource_id => question_resource.id, :resource_url => question_resource.url, :resource_type => question_resource.media_type
               = link_to "Show", question_resource.url, :target => "blank"
               = link_to_function "Delete", "window.media.removeResource(#{question_resource.id})"
          - elsif question_resource.media_type == "text"
               = image_tag "http://www.elitetranslingo.com/css/css/images/doc.png", :id => "media_preview_#{question_resource.id}", :class => "media_preview", :resource_id => question_resource.id, :resource_url => question_resource.url, :resource_type => question_resource.media_type
               = link_to "Show", question_resource.url, :target => "blank"  
               = link_to_function "Delete", "window.media.removeResource(#{question_resource.id})"      
          - elsif question_resource.media_type == "video" 
               = image_tag "http://cache.gizmodo.com/assets/images/4/2010/09/youtube-video-player-loading.png", :id => "media_preview_#{question_resource.id}", :class => "media_preview", :resource_id => question_resource.id, :resource_url => question_resource.url, :resource_type => question_resource.media_type  
               = link_to "Show", "#{question_resource.url}&t=0m#{question_resource.begin}s", :target => "blank" 
               = link_to_function "Delete", "window.media.removeResource(#{question_resource.id})"
     - else 
          = image_tag "http://www.mediatehawaii.org/wp-content/uploads/placeholder.jpg", :class => "media_preview"
