.question_media_box
     - if question_resource = question.resources.all(:conditions => {:contains_answer => false}).first
          - if question_resource.media_type == "image" then url = question_resource.url
          - elsif question_resource.media_type == "text" then url = "http://www.elitetranslingo.com/css/css/images/doc.png"
          - elsif question_resource.media_type == "video" then url = "http://cache.gizmodo.com/assets/images/4/2010/09/youtube-video-player-loading.png"
          = image_tag url, :id => "media_preview_#{question_resource.id}", :class => "media_preview", :resource_id => question_resource.id, :resource_url => question_resource.url, :resource_type => question_resource.media_type
          = link_to "Show", url, :target => "blank"
          = link_to_function "Delete", "window.media.removeResource(#{question_resource.id})"
     - else 
          = image_tag "http://www.mediatehawaii.org/wp-content/uploads/placeholder.jpg", :class => "media_preview"
.answer_media_box
     - if answer_resource = question.resources.all(:conditions => {:contains_answer => true}).first
          - if answer_resource.media_type == "image" then url = answer_resource.url
