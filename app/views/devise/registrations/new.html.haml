#login
  %h2 QuestionBase Sign Up
  = form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
    #login_fields
      #email
        = f.email_field :email, :placeholder => "email", :class => "login_field"
      #password
        = f.password_field :password, :placeholder => "password", :class => "login_field"
      #password
        = f.password_field :password_confirmation, :placeholder => "confirm password", :class => "login_field"        
    - if devise_mapping.rememberable?
      #submit
        = f.check_box :remember_me
        = f.label :remember_me
        = f.submit "Sign up", :class => "input_button"
  = link_to "Log in", "/users/sign_in"
